<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="Theme.SmsBackup" parent="Theme.AppCompat.Light">
    <item name="colorPrimary">@color/AppPrimary</item>
    <item name="colorPrimaryDark">@color/AppPrimaryDark</item>
    <item name="colorAccent">@color/AppAccent</item>

    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Theme.SmsBackup.WhiteBackground" parent="Theme.SmsBackup">
    <item name="android:textColorPrimary">@color/AppAccentText</item>
    <item name="android:textColorSecondary">@color/AppAccentText</item>
    <item name="background">@android:color/black</item>
  </style>

  <style name="Theme.SmsBackup.Toolbar" parent="Theme.SmsBackup">
    <item name="android:textColorPrimary">@color/AppPrimaryText</item>
    <item name="android:textColorSecondary">@color/AppPrimaryText</item>
    <item name="tabIndicatorColor">@color/AppPrimary</item>
  </style>
</resources>